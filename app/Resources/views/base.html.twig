<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Advertisements!{% endblock %}</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/global.css') }}" />
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <span class="navbar-brand">Advertisements</span>
                </div>
                <ul class="nav navbar-nav">
                    <li><a href="/">Home</a></li>
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <li class="dropdown">
                            <a href="/advertisements" class="dropdown-toggle" data-toggle="dropdown">
                                Your advertisements
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="/post">New</a></li>
                                <li><a href="/advertisements">View</a></li>
                            </ul>
                        </li>
                    {% endif %}
                    {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <li><a href="/login">Login</a></li>
                    {% endif %}
                    {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <li><a href="/register">New User Registration</a></li>
                    {% endif %}
                </ul>
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <ul class="nav navbar-nav logout">
                    <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                </ul>
                <span class="logged-in">Logged in as {{ app.user.username }}</span>
                {% endif %}
            </div>
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    </body>
</html>
